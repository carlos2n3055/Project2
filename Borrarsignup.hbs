<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>New user</h1>

            <hr>

            {{!-- <form action="/user-zone/signup" method="POST" enctype="multipart/form-data"> --}}
            <form action="/user-zone/signup" method="POST">

                <div class='form-group'>
                    <label for='username'>Username</label>
                    <input name='username' type='text' class='form-control' placeholder='Username' id='username'>
                </div>

                <div class='form-group'>
                    <label for='password'>Password</label>
                    <input name='password' type='password' class='form-control' placeholder='*****' id='password'>
                </div>

                <div class='form-group'>
                    <label for='profileImg'>Profile Image</label>
                    <input name='profileImg' type='text' class='form-control' placeholder='Add profile image'
                        id='profileImg'>
                </div>


                {{!-- <div class='form-group'>
                    <div class="custom-file">
                        <input name="imageFile" type="file" class="custom-file-input" id="imageFile">
                        <label class="custom-file-label" for="imageFile">Select image</label>
                    </div>
                </div> --}}

                <button type='submit' class='btn btn-dark btn-block btn-costum'>Sign up</button>
                {{#if errorMsg}}
                <p style="margin-top: 10px;background:#A59C94; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}

            </form>

        </div>

    </div>

</div>