<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Log in</h1>

            <hr>

            <form action="/user-zone/login" method="POST">

                <div class='form-group'>
                    <label for='username'>Username</label>
                    <input name='username' type='text' class='form-control' placeholder='Username' id='username'>
                </div>

                <div class='form-group'>
                    <label for='password'>Password</label>
                    <input name='password' type='password' class='form-control' placeholder='*****' id='password'>
                </div>

                <button type='submit' class='btn btn-dark btn-block btn-costum'>Log in</button>
                {{#if errorMsg}}
                <p style="margin-top: 10px;background:#A59C94; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}

            </form>

        </div>

    </div>

</div>