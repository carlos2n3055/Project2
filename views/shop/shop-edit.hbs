<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2>EDIT SHOP</h2>

            <form action="/shops/edit?id={{_id}}" method="POST">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="{{name}}">
                </div>

                <div class="form-group">
                    <label>Shop image</label>
                    <input type="text" class="form-control" name="shopImg" value="{{shopImg}}">
                </div>

                <div class=" form-group">
                    <label>Nationality</label>
                    <select name="nationality" class="form-control" id="nationality-list">
                        <option>Select</option>
                        <option value="Italian">Italian</option>
                        <option value="Mexican">Mexican</option>
                        <option value="Colombian">Colombian</option>
                        <option value="Chinese">Chinese</option>
                    </select>
                    <p><small>Currently: {{nationality}}</small></p>
                </div>

                <div class=" form-group">
                    <label>Description</label>
                    <input type="text" class="form-control" name="description" value="{{description}}">
                </div>

                <div class=" form-group">
                    <label>Schedule</label>
                    <input type="text" class="form-control" name="schedule" value="{{schedule}}">
                </div>

                <div class=" form-group">
                    <label>Latitude</label>
                    <input type="text" class="form-control" name="latitude" value="{{location.coordinates.[0]}}">
                </div>

                <div class=" form-group">
                    <label>Longitude</label>
                    <input type="text" class="form-control" name="longitude" value="{{location.coordinates.[1]}}">
                </div>

                <button type="submit" class="btn btn-dark">Save</button>
                <a href="/shops/{{_id}}" class="btn btn-dark">Cancel</a>

            </form>

        </div>

    </div>

</div>