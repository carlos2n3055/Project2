<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Shops</h1>
        </div>
        <div class="col-md-6">
            {{#if isAdminOwner}}
            <a href="/shops/new" class="btn btn-success btn-sm">Add new shop</a>
            {{/if}}
        </div>
    </div>
</div>

<div class="row justify-content-center">
    {{#each allShops}}
    <div class="col-sm-6 col-md-4 text-center">
        <div>
            <img src="{{shopImg}}" alt="{{name}} image">
        </div>
        <h2>{{name}}</h2>
        <p>Nationality: {{nationality}}</p>
        <p>{{description}}</p>
        <div>
            <a href="/shops/{{_id}}" class="btn btn-sm btn-dark">See Details</a>
            <a href="/user-zone/favorites/{{_id}}" class="btn btn-sm btn-dark">Add to favorites</a>

            {{#if ../isAdmin}}
            <a href="/shops/delete?id={{_id}}" class="btn btn-sm btn-danger">Delete</a>
            {{/if}}

            {{!-- {{#if ../isAdmin}}
            <a href="/shops/delete/{{_id}}" class="btn btn-sm btn-danger">Delete</a>
            {{/if}} --}}

        </div>
    </div>
    {{/each}}
</div>

<div class="container marginB">
    <div class="row">
        <div class="col-md-12">
            <div id="shopsMap"></div>
        </div>
    </div>
</div>



