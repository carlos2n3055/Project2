<div class="container places-index">

    <div class="row justify-content-between">
        <h1 style="font-weight: 100">Shops</h1>
        <a href="/shops/new" class="btn btn-success">Add new shop</a>
    </div>


    <ul>
        {{#each allShops}}
        <div class="col-md-3">
            <article class="card">
                <img class="card-img-top" src="{{shopImg}}" alt="{{name}} image">
                <div class="card-body">
                    <li>
                        <a href="/shops/{{_id}}" class="btn btn-sm btn-dark">See Details</a>
                        <a href="/user-zone/favorites/{{_id}}" class="btn btn-sm btn-dark">Add to favorites</a>
                        <h2>{{name}}</h2>
                        <h3>Nationality: {{nationality}}</h3>
                        <h4>{{description}}</h4>
                    </li>
                </div>
            </article>
        </div>
        {{/each}}
    </ul>


    <div class="col-md-8">
        <div id="shopsMap"></div>
    </div>

</div>


