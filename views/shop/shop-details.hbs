<div class="container coasters-index">

    <div class="d-none">
        <p id="shopIDtoMap">{{theShop._id}}</p>
    </div>

    <div class="row">

        <div class="col-md-6">

            <img src="{{theShop.shopImg}}" alt="{{theShop.name}} image">

            <h1 style="font-weight: 100">{{theShop.name}}</h1>

            <hr>

            <p>{{theShop.description}}</p>
            <p>{{theShop.nationality}}</p>
            <p>Opening hours: {{theShop.schedule}}</p>

            <hr>

            <div class="row">

                <div class="col-6">
                    <a href="/shops" class="btn btn-dark mx-1">Back to shops</a>
                </div>

                <div class="col-6">
                    {{#if isAdmin}}
                    <a href="/shops/edit?id={{theShop._id}}" class="btn btn-dark mx-1">Edit</a>
                    <a href="/shops/delete?id={{theShop._id}}" class="btn btn-dark mx-1">Delete</a>
                    {{/if}}
                </div>

            </div>

        </div>

        <div class="col-md-6">
            <div id="shopMap"></div>
        </div>

    </div>

</div>



