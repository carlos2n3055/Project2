<div class="container places-index">

    <div>

        <div class="col-md-7">

            <h1 class="title" style="font-weight: 150">Edit user</h1>

            <hr>

            <form action="/user-zone/edit?user_id={{user._id}}" method="POST" enctype="multipart/form-data">

                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" value="{{user.username}}">
                </div>

                <div class=" form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder='******'>
                    <p><small>*Obligatory field</small></p>
                </div>

                <div class="form-group">
                    <label for="imageFile">Profile Image</label>
                    <input name="imageFile" type="file" class="form-control-file" id="imageFile">
                </div>

                <button type="submit" class="btn btn-dark btn-costum">Save</button>
                <a href="/user-zone/profile" class="btn btn-dark mx-2 btn-costum">Cancel</a>
                
                {{> errorMsg}}

            </form>

        </div>

    </div>

</div>