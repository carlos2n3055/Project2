<div class="container places-index">


    <div>

        <div class="col-md-7">

            <h1 class="title" style="font-weight: 150">Edit user</h1>

            <hr>

            <form action="/user-zone/edit?user_id={{user._id}}" method="POST">

                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" value="{{user.username}}">
                </div>

                <div class=" form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder='******'>
                </div>

                <div class="form-group">
                    <label>Profile image</label>
                    <input type="text" class="form-control" name="profileImg" value="{{user.profileImg}}">
                </div>

                <button type="submit" class="btn btn-dark btn-costum">Save</button>
                <a href="/user-zone/profile" class="btn btn-dark mx-2 btn-costum">Cancel</a>

                {{#if errorMsg}}
                <p style="margin-top: 10px;background: #A59C94; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}

            </form>

        </div>

    </div>

</div>